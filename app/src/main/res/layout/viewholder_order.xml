<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_bg"
    android:layout_margin="16dp"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:elevation="5dp"
    android:id="@+id/layout_order">

    <TextView
        android:id="@+id/orderHistory_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã thanh toán  "
        android:drawableStart="@drawable/ic_v"
        app:layout_constraintStart_toEndOf="@id/orderHistory_item"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/orderHistory_item"
        app:layout_constraintBottom_toBottomOf="@id/orderHistory_item"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="16dp"
        android:textStyle="italic"
        android:gravity="center"/>

    <TextView
        android:id="@+id/orderHistory_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="24,Oct"
        android:textColor="@color/green_500"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Tổng Bill:  "
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderHistory_item"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="16dp"
        android:textStyle="italic"
        android:gravity="center"/>


    <TextView
        android:id="@+id/order_total_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="120000 đồng"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>