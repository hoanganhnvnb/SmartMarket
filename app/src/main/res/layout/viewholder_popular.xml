<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:layout_margin="10dp"
    android:elevation="3dp"
    android:id="@+id/popular_layout">

    <ImageView
        android:id="@+id/popular_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/bike_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/popular_title"
        android:layout_width="132dp"
        android:layout_height="20sp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_image"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/popular_currency_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popular_title"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="16dp"
        android:text="đ"
        android:textStyle="bold"
        android:textColor="@color/green_500"
        android:textSize="8sp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/popular_price_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/popular_currency_unit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popular_title"
        app:layout_constraintHorizontal_bias="0"
        android:text="10.000"
        android:textSize="13sp"
        android:textColor="@color/green_500"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/popular_sold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/popular_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/popular_quantity_sold"
        android:text="Đã bán"
        android:textSize="8sp"
        android:textStyle="italic"
        android:layout_marginTop="18dp"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/popular_quantity_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popular_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>