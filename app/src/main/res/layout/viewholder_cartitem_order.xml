<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:elevation="3dp"
    android:id="@+id/layout_item_order">

    <TextView
        android:id="@+id/quantity_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/title_item_order"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Title của hàng hóa"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/quantity_item_order"
        app:layout_constraintStart_toEndOf="@id/quantity_item_order"
        app:layout_constraintTop_toTopOf="@+id/quantity_item_order" />

    <TextView
        android:id="@+id/price_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="10.000đ"
        app:layout_constraintBottom_toBottomOf="@id/title_item_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_item_order" />

</androidx.constraintlayout.widget.ConstraintLayout>